<%= form_for(current_user.messages.build(receiver_id: @user.id)) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new direct message..." %>
    
  </div>
  <div><%= f.hidden_field :receiver_id %></div>
  <%= f.submit "Send", class: "btn mybtn btn-lg btn-primary" %>
<% end %>