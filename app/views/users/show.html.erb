<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %><br/>
        <%= @email %>
      </h1>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
    <section>
      <%= unless current_user == @user
      render 'messages/send'
    end
       %>
        <%= if current_user == @user
     link_to 'View my picutes', '# '# render partial: "product", collection: @products
    end
       %>
    </section>
  </aside>
	<div class="col-md-8">
		<%= render 'follow_form' if signed_in? %>
	    <% if @user.microposts.any? %>
	      <h3>Microposts (<%= @user.microposts.count %>)</h3>
	      <ol class="microposts">
	        <%= render @microposts %>
	      </ol>
	      <%= will_paginate @microposts %>
	    <% end %>
	  </div>
  
</div>